<?xml version="1.0"?>
<robot name="simple_robot">

  <!-- base_link: 직육면체 -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <box size="1 0.5 0.3"/>
      </geometry>
      <material name='gray'>
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <box size="1 0.5 0.3"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10.0"/>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <inertia
        ixx="1" ixy="0.0" ixz="0.0"
        iyy="4" iyz="0.0"
        izz="3"/>
    </inertial>
  </link>

  <!-- left_wheel_link -->
  <link name="left_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder length="0.2" radius="0.4"/>
      </geometry>
      <material name='blue'>
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder length="0.2" radius="0.4"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>1.0</mu>         <!-- 정지 마찰 계수 -->
            <mu2>1.0</mu2>       <!-- 운동 마찰 계수 -->
          </ode>
        </friction>
      </surface>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.01" ixy="0.0" ixz="0.0"
        iyy="0.02" iyz="0.0"
        izz="0.03"/>
    </inertial>
  </link>

  <!-- right_wheel_link -->
  <link name="right_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder length="0.2" radius="0.4"/>
      </geometry>
      <material name='blue'>
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder length="0.2" radius="0.4"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>5.0</mu>         <!-- 정지 마찰 계수 -->
            <mu2>1.0</mu2>       <!-- 운동 마찰 계수 -->
          </ode>
        </friction>
      </surface>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.01" ixy="0.0" ixz="0.0"
        iyy="0.02" iyz="0.0"
        izz="0.03"/>
    </inertial>
  </link>
  
  <link name="camera">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <!-- joints -->
  <joint name="base_to_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="0 -0.35 0.2" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="5.0" friction="0.0"/>
  </joint>

  <joint name="base_to_right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0 0.35 0.2" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="5.0" friction="0.0"/>
  </joint>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera"/>
    <origin xyz="0.55 0 0.2" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
  
 <!--_DEPTH CAMERA -->  
  <gazebo reference="camera">
    <sensor name="depth_camera1" type="depth">
      <update_rate>30</update_rate>
      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image>
          <width>800</width>
          <height>800</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.1</near>
          <far>100</far>
        </clip>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
      <camera_name>camera</camera_name>
      <image_topic_name>image_raw</image_topic_name>
      <camera_info_topic_name>camera_info</camera_info_topic_name>
      <frame_name>camera</frame_name>
    </plugin>
    </sensor>
  </gazebo>
  
    <!-- GAZEBO DIFF DRIVE PLUGIN -->
  <gazebo>
    <plugin name="diff_drive_controller" filename="libgazebo_ros_diff_drive.so">

      <!-- Wheels -->
      <left_joint>base_to_left_wheel</left_joint>
      <right_joint>base_to_right_wheel</right_joint>

      <!-- Kinematics -->
      <wheel_separation>0.7</wheel_separation> <!-- 바퀴 사이의 거리 (y축 기준) -->
      <wheel_diameter>0.8</wheel_diameter>   <!-- 바퀴의 지름 -->

      <!-- Limits -->
      <max_wheel_torque>20</max_wheel_torque>
      <max_wheel_acceleration>1.0</max_wheel_acceleration>

      <!-- Output -->
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <publish_odometry_tf>true</publish_odometry_tf>
      <publish_wheel_tf>true</publish_wheel_tf>
      <publish_odom>true</publish_odom>

      <!-- Topic Names -->
      <command_topic>cmd_vel</command_topic>
      <odometry_topic>odom</odometry_topic>
      
    </plugin>
  </gazebo>
</robot>

