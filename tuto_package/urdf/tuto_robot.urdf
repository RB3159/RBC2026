<?xml version="1.0"?>
<robot name="tuto">

  <!-- ================================= LINKS ================================= -->

  <!-- Base Link (Chassis) -->
  <link name="link_0">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.166667" ixy="0" ixz="0" iyy="0.166667" iyz="0" izz="0.166667"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="1.5 1 0.4"/>
      </geometry>
      <material name="grey">
        <color rgba="0.7 0.7 0.7 1"/>
      </material>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="1.5 1 0.4"/>
      </geometry>
    </collision>
  </link>

  <!-- Left Wheel Link -->
  <link name="link_1">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.145833" ixy="0" ixz="0" iyy="0.145833" iyz="0" izz="0.125"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.25" radius="0.3"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.25" radius="0.3"/>
      </geometry>
    </collision>
  </link>

  <!-- Right Wheel Link -->
  <link name="link_1_clone">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.145833" ixy="0" ixz="0" iyy="0.145833" iyz="0" izz="0.125"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.25" radius="0.3"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.25" radius="0.3"/>
      </geometry>
    </collision>
  </link>

  <!-- Caster Wheel Link -->
  <link name="link_2">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </collision>
  </link>

  <!-- Camera Link -->
  <link name="camera_link">
    <inertial>
      <origin rpy="0 0 3.1416" xyz="0 0 0.05"/>
      <mass value="0.1"/>
      <inertia ixx="0.000166667" ixy="0" ixz="0" iyy="0.000166667" iyz="0" izz="0.000166667"/>
    </inertial>
    <visual>
      <origin rpy="0 0 3.1416" xyz="0 0 0.05"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 3.1416" xyz="0 0 0.05"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- ================================= JOINTS ================================= -->

  <!-- Left Wheel Joint -->
  <joint name="link_0_JOINT_0" type="continuous">
    <parent link="link_0"/>
    <child link="link_1"/>
    <origin rpy="1.5707 0 0" xyz="0.45 -0.625029 -0.1"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Right Wheel Joint -->
  <joint name="link_0_JOINT_1" type="continuous">
    <parent link="link_0"/>
    <child link="link_1_clone"/>
    <origin rpy="1.5707 0 0" xyz="0.45 0.625029 -0.1"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Caster Wheel Joint -->
  <joint name="link_0_JOINT_2" type="fixed">
    <parent link="link_0"/>
    <child link="link_2"/>
    <origin rpy="0 0 0" xyz="-0.55 0 -0.2"/>
  </joint>

  <!-- Camera Joint -->
  <joint name="camera_joint" type="fixed">
    <parent link="link_0"/>
    <child link="camera_link"/>
    <origin rpy="0 0 0" xyz="-0.591192 0.010417 0.243423"/>
  </joint>

  <!-- Depth Camera -->
  <link name="depth_camera_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
  </link>

  <joint name="depth_camera_joint" type="fixed">
    <parent link="link_0"/>
    <child link="depth_camera_link"/>
    <origin xyz="-0.542954 0.008334 0.274738" rpy="0 0 3.1416"/>
  </joint>

  <gazebo reference="depth_camera_link">
    <sensor name="depth_camera" type="depth">
      <update_rate>30</update_rate>
      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image>
          <width>320</width>
          <height>240</height>
        </image>
        <clip>
          <near>0.1</near>
          <far>100</far>
        </clip>
      </camera>
      <always_on>true</always_on>
      <visualize>true</visualize>

      <plugin name="depth_camera_controller" filename="libgazebo_ros_camera.so">
        <camera_name>depth_camera</camera_name>
        <image_topic_name>image_raw</image_topic_name>
        <camera_info_topic_name>camera_info</camera_info_topic_name>
        <frame_name>depth_camera_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo>
    <plugin name="diff_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <!-- 바퀴 조인트 이름 -->
      <left_joint>link_0_JOINT_0</left_joint>
      <right_joint>link_0_JOINT_1</right_joint>

      <!-- 기하적 정보 -->
      <wheel_separation>1.0</wheel_separation> <!-- 바퀴 사이 거리 -->
      <wheel_diameter>0.6</wheel_diameter>     <!-- 바퀴 지름 -->

      <!-- 속도 제한 -->
      <max_wheel_torque>20</max_wheel_torque>
      <max_wheel_acceleration>5.0</max_wheel_acceleration>

      <!-- 프레임 정보 -->
      <robot_base_frame>link_0</robot_base_frame>
      <odometry_frame>odom</odometry_frame>

      <!-- TF & Topic 설정 -->
      <publish_odom>true</publish_odom>
      <publish_wheel_tf>true</publish_wheel_tf>
      <publish_odometry_tf>true</publish_odometry_tf>

      <!-- ROS topic -->
      <command_topic>cmd_vel</command_topic>
      <odometry_topic>odom</odometry_topic>
    </plugin>
  </gazebo>

</robot>
